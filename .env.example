# SIGMA-PLI - Configurações de Ambiente

# ============================================
# SEGURANÇA - CRIPTOGRAFIA (IMPORTANTE!)
# ============================================
# Chave mestra para criptografia de dados sensíveis (CPF, Telefone, CNPJ)
# Gere uma chave forte com: python -c "import secrets; print(secrets.token_hex(32))"
# NUNCA commite a chave real no git! Use apenas em .env (adicionado ao .gitignore)
MASTER_KEY=sua_chave_mestra_super_secreta_aqui_min_32_caracteres

# ============================================
# BANCO DE DADOS - PostgreSQL
# ============================================
DATABASE_URL=postgresql+asyncpg://sigma_user:sigma_pass@localhost:5432/sigma_pli_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=sigma_user
POSTGRES_PASSWORD=sigma_pass
POSTGRES_DB=sigma_pli_db

# ============================================
# BANCO DE DADOS - Neo4j
# ============================================
ENABLE_NEO4J=true
NEO4J_URI=neo4j://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=sua_senha_neo4j

# ============================================
# APLICAÇÃO
# ============================================
APP_NAME=SIGMA-PLI
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# ============================================
# API
# ============================================
API_PREFIX=/api/v1
API_TITLE=SIGMA-PLI API
API_DESCRIPTION=Sistema de Gestão de Metadados para Plataforma de Interoperabilidade

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:8010,http://127.0.0.1:8010,http://localhost:3000

# ============================================
# JWT (Autenticação)
# ============================================
JWT_SECRET_KEY=sua_chave_jwt_super_secreta_min_32_caracteres
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================
# SMTP (E-mail)
# ============================================
ENABLE_EMAIL=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASSWORD=sua_senha_app_gmail
SMTP_FROM=noreply@sigma-pli.gov.br

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/sigma-pli.log

# ============================================
# REDIS (Cache) - Opcional
# ============================================
ENABLE_REDIS=false
REDIS_URL=redis://localhost:6379/0

# ============================================
# AWS S3 (Armazenamento) - Opcional
# ============================================
ENABLE_S3=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=sigma-pli-bucket
AWS_S3_REGION=us-east-1
